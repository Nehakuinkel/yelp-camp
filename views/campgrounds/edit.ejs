<% layout('./layout/boilerPlate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class=" mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" placeholder="Title" value="<%=campground.title%>"/>
            </div>
            <div class= "mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" placeholder="Location" value="<%=campground.location%>"/>
            </div>
            <div class=" mb-3">
                <label class="form-label" for="price">Price</label>
                <input class="form-control" type="number" id="location" name="campground[price]" placeholder="Price" value="<%=campground.price%>"/>
            </div>
            <div class=" mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="location" name="campground[image]" placeholder="Image" value="<%=campground.image%>"/>
            </div>
            <div class=" mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="location" name="campground[description]" placeholder="Description" value="<%=campground.description%>"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Campground</button>
            </div>
        </form>
    </div>
</div>
  <a href="/campgrounds/<%=campground._id%>"> Back to Campgrounds</a>
